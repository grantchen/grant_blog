%div.row
  =link_to "新建模板", new_admin_blog_template_path, class: "button small radius"

%div.row
  %table
    %thead
      %tr
        %th 名字
        %th 动作
    %tbody
      - @blog_templates.each do |blog_template|
        %tr
          %td{width: "200"}
            = blog_template.title
          %td{width: "200"}
            =link_to "编辑", edit_admin_blog_template_path(blog_template), class: "margin_right_10"
            = "|"
            =link_to "删除", admin_blog_template_path(blog_template), method: "delete", confirm: "你确认删除吗？", class: "margin_left_10"