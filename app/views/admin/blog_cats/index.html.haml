%div.row
  =link_to "新建板块", new_admin_blog_cat_path, class: "button small radius"

%div.row
  %table
    %thead
      %tr
        %th 名字
        %th 类型
        %th 排序
        %th 动作
    %tbody
      - @blog_cats.each do |blog_cat|
        %tr
          %td{width: "200"}
            = blog_cat.title
          %td{width: "200"}
            = show_cat_type(blog_cat.cat_type)
          %td{width: "100"}
            = blog_cat.sort
          %td{width: "200"}
            =link_to "编辑", edit_admin_blog_cat_path(blog_cat), class: "margin_right_10"
            = "|"
            =link_to "删除", admin_blog_cat_path(blog_cat), method: "delete", confirm: "你确认删除吗？", class: "margin_left_10"

