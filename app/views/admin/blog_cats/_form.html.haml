= form_for [:admin, @blog_cat] do |f|
  %div.row
    %div.large-6
      %div.row
        %div.columns.large-2
          = f.label :title, "名字", class: "right inline required"
        %div.columns.large-10
          = f.text_field :title
    %div.large-6
      %div.row
        %div.columns.large-2
          = f.label :cat_type, "类型", class: "right inline"
        %div.columns.large-4.left
          = f.select :cat_type, [['文章列表', "list"], ['单篇文章', "single"]]
    %div.large-6
      %div.row
        %div.columns.large-2
          = f.label :sort, "排序", class: "right inline"
        %div.columns.large-2.left
          = f.text_field :sort
  %div.row
    .div.large-6
      = f.submit '保存', class: "button small radius"